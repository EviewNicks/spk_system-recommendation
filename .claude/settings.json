{
  "env": {
    "ANTHROPIC_BASE_URL": "https://api.z.ai/api/anthropic",
    "ANTHROPIC_AUTH_TOKEN": "306a1c9fecd24006bf62c09b3bf14e3c.iwQLtEoZa2eVW4aG",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "glm-4.5-air",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "glm-4.6"
    // "ANTHROPIC_DEFAULT_OPUS_MODEL": "glm-4.5-air"
  },
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(**/.env*)",
      "Read(**/.secret*)",
      "Read(**/env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.crt)",
      "Read(**/*.cert)",
      "Read(**/secrets/**)",
      "Read(**/node_modules/**)",
      "Read(**/credentials/**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/use_bun.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/windows_notification.py build_complete"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/ts_lint.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/play_audio.py ready"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/play_audio.py error_fixed"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/play_audio.py "
          },
          {
            "type": "command",
            "command": "python .claude/hooks/windows_notification.py awaiting_instructions"
          }
        ]
      }
    ]
  }
}
